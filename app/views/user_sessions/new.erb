<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your user, please fix them</strong>
      <ul>
        <% @user.errors.full_messages.each do |user| %>
          <li><%= user %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<form action='/user_sessions' method="post">
  <div>
    <label>Name:</label>
    <input 
      type="text" 
      name="user_name" 
      value="<%= @user && @user.name %>">
  </div>
  <div>
    <label>Email:</label>
    <input 
      type="text" 
      name="user_name" 
      value="<%= @user && @user.email %>">
  </div>
  <div>
    <label>Password: </label>
    <input 
      type="password" 
      name="password" 
      placeholder="******" 
      value="<%= @user && @user.password %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>