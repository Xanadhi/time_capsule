<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them</strong>
      <ul>
        <% @song.errors.full_messages.each do |song| %>
          <li><%= song %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<form action='/user_sessions/new' method="post">
  <div>
    <label>User name:</label>
    <input 
      type="text" 
      name="user_name" 
      value="<%= @user && @user.name %>">
  </div>
  <div>
    <label>Password: </label>
    <input 
      type="password" 
      name="password" 
      placeholder="******" 
      value="<%= @user && @user.password %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>